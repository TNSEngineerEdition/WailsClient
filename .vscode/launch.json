{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Wails: Debug",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "${workspaceFolder}/build/bin/WailsClient",
            "preLaunchTask": "build",
            "cwd": "${workspaceFolder}",
            "env": {}
        },
        {
            "name": "Wails: Debug frontend",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:34115",
            "webRoot": "${workspaceFolder}/frontend/src",
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ],
            "sourceMaps": true
        }
    ]
}
